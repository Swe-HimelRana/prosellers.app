{
  "name": "prosellers-app",
  "version": "1.0.0",
  "description": "Prosellers App Launcher - Quick access to Prosellers services",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rm -rf dist",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win --x64",
    "build:win:installer": "electron-builder --win --x64 --config.win.target=nsis",
    "build:win:portable": "electron-builder --win --x64 --config.win.target=portable",
    "build:all": "electron-builder --mac --win",
    "publish": "electron-builder --mac --win --publish always"
  },
  "keywords": [
    "electron",
    "prosellers",
    "launcher"
  ],
  "author": "Prosellers",
  "license": "MIT",
  "dependencies": {
    "electron-updater": "^6.1.7",
    "sql.js": "^1.10.3"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.prosellers.app",
    "productName": "Prosellers App",
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/sql.js/dist/*.wasm"
    ],
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "navigation.html",
      "settings.html",
      "pin-entry.html",
      "notes.html",
      "styles.css",
      "package.json",
      "!node_modules/sql.js/dist/**/*-debug.*",
      "!node_modules/sql.js/dist/*.zip",
      "node_modules/sql.js/dist/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "Swe-HimelRana",
      "repo": "prosellers.app"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
